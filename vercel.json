{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/callback",
      "dest": "/api/callback.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/task/(?<taskId>[^/]+)",
      "dest": "/api/task/[taskId].js?taskId=$taskId",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/tasks",
      "dest": "/api/tasks.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/api/tasks.js"
    }
  ]
} 